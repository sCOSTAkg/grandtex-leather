datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  payload   Json
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
